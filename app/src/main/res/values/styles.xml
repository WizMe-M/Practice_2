<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SampleTableRow">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="InputButtonPortrait">
        <item name="backgroundTint">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="InputButtonLandscape">
        <item name="backgroundTint">@color/orange</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="SampleTextViewPortrait">
        <item name="backgroundTint">@color/gray</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:inset">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_span">4</item>
    </style>

    <style name="SampleTextViewLandscape">
        <item name="backgroundTint">@color/gray</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:inset">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_span">6</item>
    </style>
</resources>